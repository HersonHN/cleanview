{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "./src/types/types.d.ts"],
    "paths": {
      "himalaya": ["./src/types/types.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
